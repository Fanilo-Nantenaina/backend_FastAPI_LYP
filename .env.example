# Application
APP_NAME=Smart Fridge API
VERSION=1.0.0
DEBUG=True

# Database
DATABASE_URL=postgresql://smartfridge_user:smartfridge_pass@localhost:5432/smartfridge_db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# Alert Configuration
EXPIRY_WARNING_DAYS=3
LOST_ITEM_HOURS=72

# Device Connection
DEVICE_PAIRING_CODE_LENGTH=6
DEVICE_PAIRING_TIMEOUT_MINUTES=5

# Redis
REDIS_URL=redis://localhost:6379/0